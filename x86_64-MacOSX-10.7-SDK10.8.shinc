DARWIN_SDK_VERSION=10.8
OSX_MIN_SUPPORTED_VERSION=10.7
DARWIN_SDK=${DARWIN_TOOLCHAIN}/lib/SDKs/MacOSX${DARWIN_SDK_VERSION}.sdk
