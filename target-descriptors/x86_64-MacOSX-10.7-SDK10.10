DARWIN_SDK_VERSION=10.10
OSX_MIN_SUPPORTED_VERSION=10.7
TARGET_ARCH=x86_64
TARGET_TRIPLE=${TARGET_ARCH}-apple-darwin
TARGET_TYPE=osx

CFLAGS="-flto -O2 -mmacosx-version-min=${OSX_MIN_SUPPORTED_VERSION}"
CXXFLAGS="${CFLAGS}"

BUILD_FREETYPE=true
BUILD_LIBJPEG_TURBO=true
BUILD_SDL2=true
BUILD_SDL2_MIXER=true
BUILD_SDL2_NET=true
BUILD_CURL=false
BUILD_LIBPNG=true
BUILD_GLM=true
